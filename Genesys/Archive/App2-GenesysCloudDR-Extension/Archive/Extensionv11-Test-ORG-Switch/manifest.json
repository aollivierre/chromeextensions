{
  "manifest_version": 3,
  "name": "Genesys Org ID Logger",
  "version": "1.0",
  "description": "Simple logger for Genesys Cloud organization ID changes",
  "host_permissions": [
    "*://*.genesys.cloud/*",
    "*://*.mypurecloud.com/*",
    "*://*.pure.cloud/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.genesys.cloud/*",
        "*://*.mypurecloud.com/*",
        "*://*.pure.cloud/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
} 