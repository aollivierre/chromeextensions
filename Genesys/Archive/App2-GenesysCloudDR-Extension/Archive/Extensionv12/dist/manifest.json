{
    "version": "2.5",
    "manifest_version": 3,
    "content_scripts": [
        {
            "run_at": "document_start",
            "all_frames": true,
            "matches": [
                "https://login.mypurecloud.com/*",
                "https://*.mypurecloud.com/*",
                "https://*.pure.cloud/*",
                "https://*.genesys.cloud/*"
            ],
            "css": [
                "dr-style.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "description": "Indicates DR, TEST, and DEV environments in Genesys Cloud",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "name": "Genesys Cloud Environment Indicator",
    "host_permissions": [
        "https://login.mypurecloud.com/*",
        "https://*.mypurecloud.com/*",
        "https://*.pure.cloud/*",
        "https://*.genesys.cloud/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Genesys Cloud Environment"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["content/*", "shared/*"],
            "matches": ["<all_urls>"]
        }
    ]
}