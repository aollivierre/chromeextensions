// This script adds a DR environment indicator through JavaScript
// This works as a backup to the CSS method
(function() {
    function addDRBanner() {
        console.log('DR Environment Extension: Adding DR indicator...');
        
        // Add corner indicator if it doesn't exist
        if (!document.getElementById('dr-environment-indicator')) {
            const indicator = document.createElement('div');
            indicator.id = 'dr-environment-indicator';
            indicator.style.cssText = 'position: fixed; bottom: 10px; right: 10px; ' +
                'background-color: rgba(255,0,0,0.7); color: white; text-align: center; ' +
                'padding: 5px 10px; font-size: 12px; font-weight: bold; z-index: 9999999; ' +
                'border-radius: 5px; box-shadow: 0 0 5px rgba(255,0,0,0.5); ' +
                'text-shadow: 1px 1px 1px black; pointer-events: none;';
            indicator.innerText = 'DR ORGANIZATION';
            document.body.appendChild(indicator);
            console.log('DR Environment Extension: Indicator added');
        }
    }

    // Run immediately and also after load
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', addDRBanner);
    } else {
        addDRBanner();
    }
    
    console.log('DR Environment Extension loaded');
})();
