{
  "manifest_version": 3,
  "name": "Genesys Cloud Environment Badge",
  "version": "1.0",
  "description": "Displays a badge indicating which Genesys Cloud environment you're currently browsing",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": [
    "*://*.genesyscloud.com/*",
    "*://*.mypurecloud.com/*",
    "*://*.mypurecloud.de/*",
    "*://*.mypurecloud.jp/*",
    "*://*.mypurecloud.ie/*",
    "*://*.mypurecloud.com.au/*",
    "*://*.pure.cloud/*",
    "*://*.inindca.com/*",
    "*://*.inintca.com/*",
    "*://*.usw2.pure.cloud/*",
    "*://*.cac1.pure.cloud/*",
    "*://*.wawanesa.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.genesyscloud.com/*",
        "*://*.mypurecloud.com/*",
        "*://*.mypurecloud.de/*",
        "*://*.mypurecloud.jp/*",
        "*://*.mypurecloud.ie/*",
        "*://*.mypurecloud.com.au/*",
        "*://*.pure.cloud/*",
        "*://*.inindca.com/*",
        "*://*.inintca.com/*",
        "*://*.usw2.pure.cloud/*",
        "*://*.cac1.pure.cloud/*",
        "*://*.wawanesa.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Genesys Cloud Environment Badge"
  }
}