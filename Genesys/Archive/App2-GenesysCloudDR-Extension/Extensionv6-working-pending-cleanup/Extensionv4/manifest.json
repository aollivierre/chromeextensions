{
    "version": "2.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "run_at": "document_start",
            "all_frames": true,
            "matches": [
                "https://login.mypurecloud.com/*",
                "https://*.mypurecloud.com/*",
                "https://*.pure.cloud/*",
                "https://*.genesys.cloud/*"
            ],
            "css": [
                "dr-style.css"
            ],
            "js": [
                "dr-script.js"
            ]
        }
    ],
    "description": "Indicates DR, TEST, and DEV environments in Genesys Cloud",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "webRequest",
        "scripting",
        "cookies"
    ],
    "name": "Genesys Cloud Environment Indicator",
    "host_permissions": [
        "https://login.mypurecloud.com/*",
        "https://*.mypurecloud.com/*",
        "https://*.pure.cloud/*",
        "https://*.genesys.cloud/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Environment Indicator"
    },
    "background": {
        "service_worker": "background.js"
    }
} 